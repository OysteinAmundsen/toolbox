{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@toolbox-web/grid": ["dist/libs/grid/index.d.ts"],
      "@toolbox-web/grid/all": ["dist/libs/grid/all.d.ts"],
      "@toolbox-web/grid/*": ["dist/libs/grid/*"],
      "@toolbox-web/grid-angular": ["dist/libs/grid-angular/index.d.ts"],
      "@toolbox-web/grid-react": ["dist/libs/grid-react/index.d.ts"],
      "@toolbox/themes/*": ["libs/themes/*"],
      "@toolbox/datagrid": ["libs/datagrid/src/"],
      "@toolbox/datagrid/*": ["libs/datagrid/src/lib/*"],
      "@demo/shared": ["demos/employee-management/shared/index.ts"],
      "@demo/shared/styles": ["demos/employee-management/shared/styles.ts"],
      "@demo/shared/demo-styles.css": ["demos/employee-management/shared/demo-styles.css"]
    }
  }
}
