{
  "name": "grid",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/grid/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:grid"],
  "targets": {
    "typecheck": {
      "command": "bunx tsc -p libs/grid/tsconfig.lib.json --noEmit",
      "options": {
        "cwd": "{workspaceRoot}"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": ["typecheck"],
      "options": {
        "outputPath": "dist/libs/grid",
        "emptyOutDir": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/grid"
      }
    },
    "typedoc": {
      "command": "bunx typedoc --options typedoc.json && bun run scripts/typedoc-to-mdx.ts",
      "options": {
        "cwd": "{projectRoot}"
      },
      "inputs": ["{projectRoot}/src/**/*.ts", "{projectRoot}/typedoc.json", "{projectRoot}/scripts/typedoc-to-mdx.ts"],
      "outputs": ["{projectRoot}/docs/api-generated", "{projectRoot}/docs/api"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/grid/**/*.ts"]
      }
    }
  }
}
