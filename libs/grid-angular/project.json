{
  "name": "grid-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/grid-angular/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:grid"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/grid-angular"],
      "dependsOn": ["link-grid-dist"],
      "options": {
        "project": "libs/grid-angular/ng-package.json"
      },
      "configurations": {
        "development": {
          "tsConfig": "libs/grid-angular/tsconfig.lib.json"
        },
        "production": {
          "tsConfig": "libs/grid-angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "link-grid-dist": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": ["grid"],
          "target": "build"
        }
      ],
      "options": {
        "command": "bun run libs/grid-angular/scripts/link-grid-dist.ts"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/grid-angular"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/grid-angular/**/*.ts"]
      }
    },
    "typedoc": {
      "command": "bunx typedoc --options typedoc.json && bun run scripts/typedoc-to-mdx.ts",
      "dependsOn": ["grid:build"],
      "options": {
        "cwd": "libs/grid-angular"
      },
      "inputs": ["{projectRoot}/src/**/*.ts", "{projectRoot}/typedoc.json", "{projectRoot}/scripts/typedoc-to-mdx.ts"],
      "outputs": ["{projectRoot}/docs/api-generated", "{projectRoot}/docs/api"]
    }
  }
}
