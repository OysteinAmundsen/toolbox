{
  "name": "grid-vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/grid-vue/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:grid"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": [
        {
          "projects": ["grid"],
          "target": "build"
        }
      ],
      "options": {
        "outputPath": "dist/libs/grid-vue",
        "emptyOutDir": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "typedoc": {
      "command": "bunx typedoc --options typedoc.json && bun run scripts/typedoc-to-mdx.ts",
      "dependsOn": ["grid:build"],
      "options": {
        "cwd": "libs/grid-vue"
      },
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.vue",
        "{projectRoot}/typedoc.json",
        "{projectRoot}/scripts/typedoc-to-mdx.ts"
      ],
      "outputs": ["{projectRoot}/docs/api-generated", "{projectRoot}/docs/api"]
    }
  }
}
