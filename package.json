{
  "name": "@toolbox-web/components",
  "version": "0.2.9",
  "license": "MIT",
  "author": "Oystein Amundsen",
  "repository": {
    "type": "git",
    "url": "https://github.com/OysteinAmundsen/toolbox.git"
  },
  "homepage": "https://toolboxjs.com",
  "bugs": {
    "url": "https://github.com/OysteinAmundsen/toolbox/issues"
  },
  "scripts": {
    "nx": "nx",
    "start": "nx serve docs",
    "build": "rm -rf dist/libs/ && nx run-many --target=build --exclude=docs --output-style=stream && bun run cem",
    "cem": "cd libs/grid && bunx cem analyze",
    "test": "nx run-many --target=test --exclude=docs,demo-angular --output-style=stream",
    "e2e": "nx e2e e2e",
    "e2e:update": "nx e2e:update-snapshots e2e",
    "demo": "bash -c 'bun nx run demo-vanilla:serve & bun nx run demo-react:serve & bun nx run demo-angular:serve & bunx wait-on http://localhost:4000 http://localhost:4300 http://localhost:4200 -t 120000 && wait'",
    "e2e:full": "bash -c 'cleanup() { pkill -P $$ 2>/dev/null; }; trap cleanup EXIT; bun nx run demo-vanilla:serve & bun nx run demo-react:serve & bun nx run demo-angular:serve & bunx wait-on http://localhost:4000 http://localhost:4300 http://localhost:4200 -t 120000 && bun run e2e'",
    "lint": "nx run-many --target=lint --exclude=docs --output-style=stream",
    "coverage": "bun run test --coverage",
    "watch": "bun run build --watch",
    "update": "nx migrate latest && nx migrate --run-migrations --if-exists && git commit -am 'chore: update dependencies' && bunx npm-check-updates --format group -u --cooldown 5 --target minor && bun install"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.5",
    "@custom-elements-manifest/analyzer": "0.11.0",
    "@eslint/js": "9.39.2",
    "@nx/angular": "^22.3.3",
    "@nx/devkit": "22.3.3",
    "@nx/eslint": "22.3.3",
    "@nx/eslint-plugin": "22.3.3",
    "@nx/js": "22.3.3",
    "@nx/playwright": "22.3.3",
    "@nx/storybook": "22.3.3",
    "@nx/vite": "22.3.3",
    "@nx/vitest": "22.3.3",
    "@nx/web": "22.3.3",
    "@playwright/test": "1.57.0",
    "@storybook/addon-a11y": "10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/web-components-vite": "10.1.11",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.7",
    "@swc/helpers": "0.5.17",
    "@types/node": "25.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "@vueless/storybook-dark-mode": "^10.0.4",
    "ajv": "^8.0.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-playwright": "2.4.0",
    "eslint-plugin-storybook": "10.1.11",
    "happy-dom": "20.0.11",
    "highlight.js": "11.11.1",
    "jiti": "2.6.1",
    "jsdom": "27.4.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lit": "3.3.2",
    "nx": "22.3.3",
    "prettier": "3.7.4",
    "remark-gfm": "^4.0.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "storybook": "10.1.11",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0",
    "vite": "7.3.0",
    "vite-plugin-dts": "4.5.4",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16",
    "wait-on": "^9.0.3"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "dependencies": {}
}
