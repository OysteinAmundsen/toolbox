{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs",
  "prefix": "toolbox",
  "tags": ["type:app", "scope:docs"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/docs"],
      "options": {
        "commands": ["nx run docs:_build-storybook", "bun apps/docs/scripts/generate-sitemap.ts"],
        "parallel": false
      },
      "configurations": {
        "ci": {
          "commands": ["nx run docs:_build-storybook:ci", "bun apps/docs/scripts/generate-sitemap.ts"]
        }
      }
    },
    "serve": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/docs/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "_build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/docs",
        "configDir": "apps/docs/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "preview": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "staticFilePath": "dist/docs",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/docs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/docs/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
