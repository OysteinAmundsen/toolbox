{
  "name": "@toolbox-web/grid",
  "version": "1.9.2",
  "description": "Zero-dependency, framework-agnostic data grid web component with virtualization, sorting, filtering, editing, and 20+ plugins. Works in vanilla JS, React, Vue, Angular, and any framework.",
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./all": {
      "types": "./all.d.ts",
      "import": "./all.js"
    },
    "./plugins/*": {
      "types": "./lib/plugins/*/index.d.ts",
      "import": "./lib/plugins/*/index.js"
    },
    "./themes/*": "./themes/*",
    "./umd/*": "./umd/*"
  },
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.css",
    "**/*.map",
    "custom-elements.json"
  ],
  "sideEffects": [
    "*.css",
    "./src/index.ts",
    "./src/index.js",
    "./src/lib/core/grid.ts",
    "./src/lib/core/grid.js"
  ],
  "keywords": [
    "data-grid",
    "datagrid",
    "grid",
    "table",
    "web-component",
    "web-components",
    "custom-element",
    "virtualization",
    "typescript",
    "vanilla-js",
    "framework-agnostic",
    "no-dependencies",
    "zero-dependencies",
    "react",
    "vue",
    "angular",
    "sorting",
    "filtering",
    "editing",
    "spreadsheet",
    "ag-grid-alternative"
  ],
  "license": "MIT",
  "author": "Oystein Amundsen",
  "repository": {
    "type": "git",
    "url": "https://github.com/OysteinAmundsen/toolbox.git",
    "directory": "libs/grid"
  },
  "homepage": "https://toolboxjs.com",
  "bugs": {
    "url": "https://github.com/OysteinAmundsen/toolbox/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "../../dist/libs/grid/custom-elements.json"
}
