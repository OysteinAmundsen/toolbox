{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    "paths": {
      "@demo/shared": ["../shared/index.ts"],
      "@demo/shared/styles": ["../shared/styles.ts"],
      "@toolbox-web/grid": ["../../../libs/grid/src/index.ts"],
      "@toolbox-web/grid/all": ["../../../libs/grid/src/all.ts"],
      "@toolbox-web/grid/plugins/*": ["../../../libs/grid/src/lib/plugins/*/index.ts"],
      "@toolbox-web/grid/*": ["../../../libs/grid/src/*"],
      "@toolbox-web/grid-angular": ["../../../libs/grid-angular/src/index.ts"],
      "@toolbox-web/grid-angular/features/*": ["../../../libs/grid-angular/features/*/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "../../../libs/grid-angular/features/*/src/index.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "references": [
    {
      "path": "../../../libs/grid/tsconfig.lib.json"
    }
  ]
}
