{
  "name": "e2e",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "e2e",
  "implicitDependencies": ["demo-vanilla", "demo-react", "demo-angular", "demo-vue"],
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/playwright-report", "{workspaceRoot}/e2e/test-results"],
      "options": {
        "commands": ["bunx playwright test --config=e2e/playwright.config.ts"],
        "cwd": "{workspaceRoot}"
      }
    },
    "e2e:dist": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/playwright-report", "{workspaceRoot}/e2e/test-results"],
      "options": {
        "commands": ["bunx playwright test --config=e2e/playwright.config.ts"],
        "cwd": "{workspaceRoot}",
        "env": {
          "USE_DIST": "true"
        }
      }
    },
    "e2e:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx playwright test --ui",
        "cwd": "e2e"
      }
    },
    "e2e:update-snapshots": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx playwright test --update-snapshots",
        "cwd": "e2e"
      }
    }
  }
}
