{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "composite": true
  },
  "exclude": [
    "out-tsc",
    "dist",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": ["../../libs/grid/stories/**/*.stories.ts", "../../libs/grid/src/lib/core/grid.stories.ts"],
  "references": [
    {
      "path": "../../libs/grid/tsconfig.lib.json"
    }
  ]
}
