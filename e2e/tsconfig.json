{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/e2e",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "test-results"]
}
