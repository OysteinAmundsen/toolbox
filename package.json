{
  "name": "@toolbox-web/components",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Oystein Amundsen",
  "repository": {
    "type": "git",
    "url": "https://github.com/OysteinAmundsen/toolbox.git"
  },
  "homepage": "https://github.com/OysteinAmundsen/toolbox#readme",
  "bugs": {
    "url": "https://github.com/OysteinAmundsen/toolbox/issues"
  },
  "scripts": {
    "nx": "nx",
    "start": "nx run storybook-app:storybook",
    "build": "nx run-many --target=build --exclude=storybook-app --output-style=stream",
    "test": "nx run-many --target=test --exclude=storybook-app --output-style=stream",
    "lint": "nx run-many --target=lint --exclude=storybook-app --output-style=stream",
    "coverage": "bun run test --coverage",
    "watch": "bun run build --watch",
    "update": "nx migrate latest && nx migrate --run-migrations --if-exists && git commit -am 'chore: update dependencies' && bunx npm-check-updates --format group -u --cooldown 5 --target minor && bun install"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/devkit": "22.2.7",
    "@nx/eslint": "22.2.7",
    "@nx/eslint-plugin": "22.2.7",
    "@nx/js": "22.2.7",
    "@nx/playwright": "22.2.7",
    "@nx/storybook": "22.2.7",
    "@nx/vite": "22.2.7",
    "@nx/vitest": "22.2.7",
    "@nx/web": "22.2.7",
    "@playwright/test": "^1.36.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/web-components-vite": "10.1.10",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "20.19.9",
    "@vitest/coverage-v8": "4.0.0",
    "@vitest/ui": "4.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-storybook": "10.1.10",
    "happy-dom": "^20.0.11",
    "highlight.js": "^11.11.1",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "lit": "^2.6.1",
    "nx": "22.2.7",
    "prettier": "^2.6.2",
    "storybook": "10.1.10",
    "swc-loader": "0.1.15",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "4.0.0"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "dependencies": {}
}
