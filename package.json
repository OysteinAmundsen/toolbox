{
  "name": "@toolbox-web/components",
  "version": "0.2.9",
  "license": "MIT",
  "author": "Oystein Amundsen",
  "repository": {
    "type": "git",
    "url": "https://github.com/OysteinAmundsen/toolbox.git"
  },
  "homepage": "https://toolboxjs.com",
  "bugs": {
    "url": "https://github.com/OysteinAmundsen/toolbox/issues"
  },
  "scripts": {
    "nx": "nx",
    "start": "nx serve docs",
    "build": "rm -rf dist/libs/ && nx run-many --target=build --exclude=docs --output-style=stream && bun run cem",
    "cem": "cd libs/grid && bunx cem analyze",
    "test": "nx run-many --target=test --exclude=docs,demo-angular --output-style=stream",
    "e2e": "nx e2e e2e",
    "e2e:update": "nx e2e:update-snapshots e2e",
    "demo": "concurrently --kill-others -n vanilla,react,angular -c blue,green,yellow \"bun nx run demo-vanilla:serve\" \"bun nx run demo-react:serve\" \"bun nx run demo-angular:serve\"",
    "demo:dist": "concurrently --kill-others -n vanilla,react,angular -c blue,green,yellow \"bun nx run demo-vanilla:serve:dist\" \"bun nx run demo-react:serve:dist\" \"bun nx run demo-angular:serve:dist\"",
    "e2e:full": "concurrently --kill-others --success first -n servers,e2e -c gray,magenta \"bun run demo:dist || true\" \"bunx wait-on http://localhost:4000 http://localhost:4300 http://localhost:4200 -t 120000 && bun run e2e\"",
    "lint": "nx run-many --target=lint --exclude=docs --output-style=stream",
    "coverage": "bun run test --coverage",
    "watch": "bun run build --watch",
    "validate:features": "bun tools/validate-feature-exports.ts",
    "update": "nx migrate latest && nx migrate --run-migrations --if-exists && git commit -am 'chore: update dependencies' && bunx npm-check-updates --format group -u --cooldown 5 --target minor && bun install"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "21.1.1",
    "@custom-elements-manifest/analyzer": "0.11.0",
    "@eslint/js": "9.39.2",
    "@nx/angular": "22.4.1",
    "@nx/devkit": "22.4.1",
    "@nx/eslint": "22.4.1",
    "@nx/eslint-plugin": "22.4.1",
    "@nx/js": "22.4.1",
    "@nx/playwright": "22.4.1",
    "@nx/storybook": "22.4.1",
    "@nx/vite": "22.4.1",
    "@nx/vitest": "22.4.1",
    "@nx/web": "22.4.1",
    "@playwright/test": "1.57.0",
    "@storybook/addon-a11y": "10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/web-components-vite": "10.1.11",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.8",
    "@swc/helpers": "0.5.18",
    "@types/node": "25.0.9",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "@vueless/storybook-dark-mode": "^10.0.6",
    "ajv": "^8.17.1",
    "concurrently": "^9.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-playwright": "2.5.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.1.11",
    "happy-dom": "20.3.3",
    "highlight.js": "11.11.1",
    "jiti": "2.6.1",
    "jsdom": "27.4.0",
    "jsonc-eslint-parser": "^2.4.2",
    "lit": "3.3.2",
    "ng-packagr": "^21.1.0",
    "nx": "22.4.1",
    "prettier": "3.8.0",
    "remark-gfm": "^4.0.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "storybook": "10.1.11",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "4.0.17",
    "wait-on": "^9.0.3"
  },
  "workspaces": [
    "libs/*",
