{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/storybook",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve"
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "../../**/stories/**/*.stories.ts",
    ".storybook/**/*.ts",
    "../../libs/storybook/**/*.ts",
    "../../libs/grid/src/lib/core/grid.stories.ts",
    "../../libs/grid/demo/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
